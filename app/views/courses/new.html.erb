<% provide(:title, 'Creat course') %>
<h1>Create course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>

    <%= render 'shared/error_messages', object: f.object  %>

     <%= f.label :name %>
     <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :total_level %>
      <%= f.number_field :total_level, class: 'form-control' %>

      <%= f.label :info %>
      <%= f.text_field :info, class: 'form-control' 	%>

      <%= f.label :status %>
      <%= f.number_field :status, class: 'form-control' %>

      <%= f.submit "Create new course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>